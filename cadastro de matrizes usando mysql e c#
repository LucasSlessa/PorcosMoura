        private MySqlConnection conexao;
        private string stringConexao = "Data Source=127.0.0.1,3306;Initial Catalog=test;User ID=root;Password=";

        public CadastroDeMatrizes()
        {
            InitializeComponent();
            conexao = new MySqlConnection(stringConexao);
        }

